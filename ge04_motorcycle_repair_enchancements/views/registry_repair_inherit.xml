<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="registry_repair_inherit" model="ir.ui.view">
        <field name="name">registry.repair</field>
        <field name="model">motorcycle.registry</field>
        <field name="inherit_id" ref="motorcycle_registry.motorcycle_registry_view_form"/>
        <field name="arch" type="xml">
<!--             Use Xpath -->
            <xpath expr="//field[@name='registry_number']" position="after">
                    <field name="repair_id" />
            </xpath>
            <xpath expr="//field[@name='picture']" position="before">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="object" name="get_repairs" icon="fa-wrench">
                        <field string="Repairs" name="repair_count" widget="statinfo"/>
                    </button>
                </div>
            </xpath>
        </field>
    </record>
</odoo>