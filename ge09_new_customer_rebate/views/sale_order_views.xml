<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_inherit" model="ir.ui.view">
        <field name="name">sale.order.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="before">
                <field name="is_new_customer" invisible="1"/>
                <button type="object" name="apply_discount" string="Apply Rebate" class="btn-primary"
                    attrs="{'invisible': [('is_new_customer', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>