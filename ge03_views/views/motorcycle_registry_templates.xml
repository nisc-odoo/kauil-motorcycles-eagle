<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="motorcycle_registry_form" name="motorcycle_registry_form">
		<t t-call="website.layout">
			<t t-set="title">Form</t>
				<div class="oe_structure">
				<h1>Motorcycle Registry Form View</h1>
				</div>
				<div>

						<!-- to do, foreach a single record to get it  -->
						<!-- <t t-set="registry_number" t-value="registries.registry_number" />
						<t t-set="registry_vin" t-value="registries.vin" />
						<t t-set="registry_owner_email" t-value="registries.owner_email" /> -->


						<input type="text" name="registry_number" placeholder="registry_number" t-att="{'value':registry_number}" />
						<input type="text" name="vin" placeholder="VIN" t-att="{'value':registry_vin}"/>
						<input type="text" name="owner_email" placeholder="Owner Email" t-att="{'value':registry_owner_email}" />
						<input type="submit" value="Submit" />
				</div>
		</t>
		
	</template>
	
	<template id="motorcycle_registry_list" name="My Registies" priority="20"> 
		<t t-call="portal.portal_layout">
			<t t-set="breadcrumbs_searchbar" t-value="True" />

			<t t-call="portal.portal_searchbar">
				<t t-set="title">Motorcycle Registries</t>
			</t>
			<t t-if="registries" t-call="portal.portal_table">
				<thead>
					<tr class="active">
						<th>
							<span class='d-none d-md-inline'>Registry #</span>
							<span class='d-block d-md-none'>Ref.</span>
						</th>
						<th class="text-end">VIN</th>
						<th class="text-center" />
						<th class="text-end">Owner Email</th>
					</tr>
				</thead>
				<t t-foreach="registries" t-as="registry">
					<tr>
						<td>
							<!-- <a t-att-href="registry.get_portal_url()"> TODO: efine get_portal_url() later -->
								
							<!-- </a> -->
							<t t-out="registry.registry_number" />
						</td>
						<td>
							<t t-out="registry.vin" />
						</td>

						
						<td>
							<t t-out="registry.owner_email" />
						</td>



						<!-- <td class="text-end">
							<span t-field="registry.registry_date" t-options="{'widget': 'date'}" />
							&amp;nbsp;
                            <span class='d-none d-md-inline'
								t-field="registry.registry_date" t-options="{'time_only': True}" />
						</td>
						<td class="text-center">
							<span t-if="order.state == 'done'"
								class="badge rounded-pill text-bg-success">
								<i class="fa fa-fw fa-check" role="img" aria-label="Done"
									title="Done" />Done </span>
						</td> -->
						<!-- <td class="text-end">
							<span t-field="order.amount_total" />
						</td> -->
					</tr>
				</t>
			</t>
			<p t-else="">There are currently regisitries for your account.</p>
		</t>
	</template>

	<template id="portal_my_registries" name="Show Motorcycle Registires" customize_show="True"
		inherit_id="portal.portal_my_home" priority="18">
		<xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
			<t t-call="portal.portal_docs_entry">
				<t t-set="title">Your Registries</t>
				<t t-set="url" t-value="'/my/registries'" />
				<t t-set="placeholder_count" t-value="'motorcycle_registry_count'" />
			</t>
		</xpath>
	</template>

	<template id="registry_portal_content" name="Registry Portal Content">
		 <!-- HEADER -->
		<div id="introduction"
			t-attf-class="pb-2 pt-3 card-header bg-white">
			<h2 class="my-0">
				HELLO WORLD
			</h2>
		</div>
		<!-- CARD BODY -->
		<div t-attf-class="card-body" >
			<div id="informations">
			
			</div>
		</div>
	
	</template>
</odoo>